{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "target": "es5"
    },
    "include": [
        "src/**/*"
    ]
}